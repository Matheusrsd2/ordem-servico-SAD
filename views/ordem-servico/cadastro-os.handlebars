{{#each erros}}
    <div class="alert alert-danger col-sm-6"> {{texto}}</div>
{{else}}

{{/each}}
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    {{>_navbar}}
    {{>_form-cadastros}}
    <div id="card" class="card col-sm-8 p-3 mb-2 bg-light text-dark">
        <div class=card-body>
            <center><h2>Criar Ordem de Serviço</h2></center><br>
            <form action="os/cadastrar" method="post">
                <div class="col-sm-8">
                    <label>Cliente (Informe o Nome Completo do Cliente)</label><br>
                    <small>Se não souber o nome completo, <a href="cliente/listar">clique aqui</a> para encontrar</small>
                    <input type="text" class="form-control" name="cliente">
                </div>
                <div class="col-sm-8">
                    <label>Produto</label>
                    <select class="form-control" name="produto">
                        <option> </option> 
                        {{#each prod}}
                        {{#dataValues}}
                        <option value="{{nome}}">{{nome}}</option>
                        {{/dataValues}}
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-8">
                    <label>Funcionário</label>
                    <select class="form-control" name="funcionario">
                        <option> </option>
                        {{#each func}}
                        {{#dataValues}}
                        <option value="{{nome}}">{{nome}}</option>
                        {{/dataValues}}
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-8">
                    <label>Observação</label>
                    <input type="text" class="form-control" name="obs">
                </div>
                <div class="col-sm-4">
                    <label>Informe o valor máximo para despesas</label>
                    <input type="number" placeholder="R$" class="form-control" name="despesaMax">
                </div><br>
                <center>
                    <input type="submit" class="btn btn-primary" value="Criar">
                </center>
            </form>
        </div>
    </div>
</body>