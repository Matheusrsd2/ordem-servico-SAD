<body>
    {{>_fonts}}
    {{>_navbar}}
    <br>
    <div id="busca">
        <form action="" method="post">
            <div class="col-sm-4">
                <input type="text" class="form-control" name="busca" placeholder="Pesquisar Produto">
                <button name="find" type="submit" class="btn btn-success">Buscar</button>
            </div>   
        </form>
    </div><br>
